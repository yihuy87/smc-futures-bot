# =========================
#  TELEGRAM CONFIG
# =========================

# Token bot Telegram dari BotFather
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Chat ID admin utama (bisa dilihat dari /mystatus atau bot sederhana)
TELEGRAM_ADMIN_ID=123456789

# Username admin (opsional, hanya untuk info di pesan)
TELEGRAM_ADMIN_USERNAME=@usernamekamu

# =========================
#  BINANCE FUTURES CONFIG
# =========================

# Endpoint REST & WebSocket Binance Futures USDT Perpetual
BINANCE_REST_URL=https://fapi.binance.com
BINANCE_STREAM_URL=wss://fstream.binance.com/stream

# =========================
#  SCANNER SETTINGS
# =========================

# Filtering volume minimum (dalam USDT, 24h quoteVolume)
# contoh: 1_000_000.0 = 1 juta USDT
MIN_VOLUME_USDT=1_000_000.0

# Maksimum pair USDT yang discan (setelah difilter volume)
MAX_USDT_PAIRS=1000

# Tier minimum sinyal yang dikirim ke user: A+, A, atau B
MIN_TIER_TO_SEND=A

# Cooldown default antar sinyal per pair (dalam detik)
# contoh 1800 = 30 menit
SIGNAL_COOLDOWN_SECONDS=1800

# Interval refresh daftar pair (dalam jam)
REFRESH_PAIR_INTERVAL_HOURS=24

# =========================
#  SMC STRATEGY SETTINGS
# =========================

# Timeframe utama untuk entry, context, dan HTF
SMC_ENTRY_TF=5m
SMC_MID_TF=15m
SMC_HTF=1h

# Berapa banyak candle 5m sinyal masih dianggap valid (misal 6 = 30 menit)
SMC_MAX_ENTRY_AGE_CANDLES=6
